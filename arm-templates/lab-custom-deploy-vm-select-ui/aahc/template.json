        "numberOfAttendees": {
            "type": "int",
            "value": "[parameters('numberOfAttendees')]"
        },
        "deployEmulatedOnPremisesEnvironment": {
            "type": "bool",
            "value": "[parameters('deployEmulatedOnPremisesEnvironment')]"
        },
        "vpnConnectionSharedKey": {
